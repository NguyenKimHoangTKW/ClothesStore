@model ClotheSstore.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idProduct)

        <div class="form-group">
            <p>Mã sản phẩm</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.codeProduct, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.codeProduct, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Tên sản phẩm</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nameProduct, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nameProduct, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Mô tả</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.describe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.describe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Hình ảnh</p>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.thumb, null, new { type = "file", @class = "form-control" })
                <img src="~/Areas/Admin/Images/Product_Images/@Model.thumb" />
                @Html.Hidden("oldimage", @Model.thumb)
                @Html.ValidationMessageFor(model => model.thumb, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Số lượng</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Giá</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Tên danh mục sản phẩm</p>
            <div class="col-md-10">
                @Html.DropDownList("idProductCategory", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idProductCategory, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Ngày thêm</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.updateDay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.updateDay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
